{
  "suggest.noselect": false,
  "suggest.minTriggerInputLength":3,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "efm": {
     /* "trace.server": "verbose",*/
      "command": "efm-langserver",
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    }
  }
}
